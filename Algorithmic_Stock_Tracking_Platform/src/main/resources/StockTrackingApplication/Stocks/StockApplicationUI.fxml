<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StockTrackingApplication.Stocks.StocksApplicationUIController" >
    <children>
        <Label text="Enter Stock Symbol: " />
        <TextField fx:id="stockSymbolField" promptText="Stock Symbol" />
        <Button text="Get Quote" onAction="#handleGetQuote" />
        <Label fx:id="resultLabel" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
